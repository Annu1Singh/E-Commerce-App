<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/Linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/foundingmem"
                        android:textAllCaps="true"
                        android:textColor="@color/materialblue"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_layout0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:background="@color/layoutbg"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/f9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/fname"
                                    android:textAllCaps="true"
                                    android:textColor="@color/materialblue"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/f8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/fnameOne"
                                    android:textAllCaps="true"
                                    android:textColor="@color/materialblue"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/layoutbg"
                        android:gravity="center">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/f10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/fnameTwo"
                                    android:textAllCaps="true"
                                    android:textColor="@color/materialblue"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/layoutbg"
                        android:gravity="center">

                        <android.support.v7.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/f7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="@string/fnameThree"
                                    android:textAllCaps="true"
                                    android:textColor="@color/materialblue"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/Linear"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/happy_customer"
                        android:textAllCaps="true"
                        android:textColor="@color/materialblue"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearHapp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/text3"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/layoutbg"
                            android:gravity="center">

                            <android.support.v7.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                app:cardCornerRadius="6dp"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="120dp"
                                        android:src="@drawable/g1"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/materialblue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/happy_customer"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/layoutbg"
                            android:gravity="center">

                            <android.support.v7.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                app:cardCornerRadius="6dp"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="120dp"
                                        android:src="@drawable/g2"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/materialblue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/happy_customer"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearhpp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/linearHapp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/layoutbg"
                            android:gravity="center">

                            <android.support.v7.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                app:cardCornerRadius="6dp"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="120dp"
                                        android:src="@drawable/g3"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/materialblue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/happy_customer"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/layoutbg"
                            android:gravity="center">

                            <android.support.v7.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                app:cardCornerRadius="6dp"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="120dp"
                                        android:src="@drawable/g4"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/materialblue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/happy_customer"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/linearhpp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/layoutbg"
                            android:gravity="center">

                            <android.support.v7.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                app:cardCornerRadius="6dp"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="120dp"
                                        android:src="@drawable/g5"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/materialblue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/happy_customer"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/layoutbg"
                            android:gravity="center">

                            <android.support.v7.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                app:cardCornerRadius="6dp"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="120dp"
                                        android:src="@drawable/ic_search_black"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:textSize="10sp"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textAllCaps="true"
                                        android:textColor="@color/materialblue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/waiting_for_next"
                                        />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>